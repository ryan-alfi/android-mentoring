<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bekup.materialtabs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SimpleTabsActivity" />
        <activity android:name=".activity.ScrollableTabsActivity" />
        <activity android:name=".activity.IconTextTabsActivity" />
        <activity android:name=".activity.IconTabsActivity" />
        <activity android:name=".activity.CustomViewIconTextTabsActivity"/>
    </application>

</manifest>